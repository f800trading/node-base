# http://editorconfig.org
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.{css,less,scss}]
indent_style = space
indent_size = 2

[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

[*.ts]
trim_trailing_whitespace = true

[*.ejs]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[Jenkinsfile]
indent_style = space
indent_size = 2
